<resources>

    <declare-styleable name="roundImageView">
        <attr name="cornerRadius" format="dimension|reference" />
        <attr name="cornerRate" format="integer" />
        <attr name="borderThickness" format="dimension|reference" />
        <attr name="borderInsideThickness" format="dimension|reference" />
        <attr name="borderOutsideThickness" format="dimension|reference" />
        <attr name="borderColor" format="color|reference" />
        <attr name="borderInsideColor" format="color|reference" />
        <attr name="borderOutsideColor" format="color|reference" />
        <attr name="fillColor" format="color|reference" />
    </declare-styleable>

</resources>